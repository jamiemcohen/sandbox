<!DOCTYPE html>
<html ng-app = "myApp">
    <head></head>
    <body>
    <div class= "create-menu" id= "create-menu" ng-controller = "markerMakerController">
       <h3>Create a New Marker</h3>
        <form class="pure-form pure-form-aligned">
    <fieldset>
            <div class="pure-control-group">
                <label for="title">Title</label>
                <input id="title" type="text" ng-model ="title" placeholder="Title">
            </div>

            <div class="pure-control-group">
                <label for="description">Description</label>
                <textarea id ="description"  ng-model ="description" placeholder="Tell us a story..."></textarea>
            </div>
            <div class="pure-control-group">
                <label for="latitude">Latitude</label>
                <input id="latitude" type="text" ng-model ="latitude" placeholder="Latitude">
            </div>    


            <div class="pure-control-group">
                <label for="longitude">Longitude</label>
                <input id="longitude" type="text"  ng-model ="longitude" placeholder="Longitude">
            </div>
        

            <div class="pure-controls">
                <button type="submit" class="pure-button pure-button-primary" ng-click = "saveMarker()">Save</button>
            </div>
            
            
     
    </fieldset>
</form>
    </div>    
    </body>
</html>